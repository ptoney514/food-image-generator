{
  "name": "food-image-worker",
  "version": "1.0.0",
  "description": "Worker service for generating food images using LocalAI",
  "type": "module",
  "main": "dist/worker.js",
  "scripts": {
    "dev": "tsx watch src/worker.ts",
    "build": "tsc",
    "start": "node dist/worker.js",
    "test": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "food",
    "image-generation",
    "stable-diffusion",
    "localai",
    "worker"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "openai": "^4.70.0",
    "bullmq": "^5.0.0",
    "ioredis": "^5.3.2",
    "sharp": "^0.33.0",
    "@aws-sdk/client-s3": "^3.500.0",
    "dotenv": "^16.4.0",
    "pg": "^8.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/pg": "^8.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0"
  }
}
